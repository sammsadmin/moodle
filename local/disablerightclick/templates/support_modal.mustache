{{!
    @template local_disablerightclick/support_modal

    Support modal UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * action-disablerightclick
    * data-value

    Context variables required for this template:
    * none

    This template is initially hidden, and is only displayed if support time is before current time or not set.
}}
<div class="row disablerightclick-support">
	<div class="col-12 message">
		<div class="center">
            {{#str}} supportmessage, local_disablerightclick {{/str}}
        </div>
	</div>
	<div class="col-6">
		<div class="center">
			<a target="_blank" href="https://www.patreon.com/yogshirsath">
			{{#pix}} patreon, local_disablerightclick {{/pix}}
			Patreon
			</a>
        </div>
	</div>
	<div class="col-6">
		<div class="center">
			<a target="_blank" href="https://www.paypal.me/yogshirsath">
			{{#pix}} paypal, local_disablerightclick {{/pix}}
			Paypal
			</a>
		</div>
	</div>
	<div class="buttons-list">
		<button data-action-disablerightclick data-value="later" class="btn btn-primary"
		title="{{#str}} supportlaterdesc, local_disablerightclick {{/str}}"
		>
			{{#str}} supportlater, local_disablerightclick {{/str}}
		</button>
		<button data-action-disablerightclick data-value="never" class="btn btn-info"
		title="{{#str}} supportneverdesc, local_disablerightclick {{/str}}"
		>
			{{#str}} supportnever, local_disablerightclick {{/str}}
		</button>
	</div>
</div>