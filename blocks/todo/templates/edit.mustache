{{!
    @template block_todo/edit

    ToDo edit template.

    Renders a triggered modal window with inputs that to be edited. See template block_todo/content for details.
}}

<form data-control="editform_{{id}}">
    <div class="input-group control-group">
        <input type="text" value="{{text}}" name="block_todo_edit_text" class="form-control block_todo_edit_text" data-id="{{id}}" required>
        <input type="hidden" value="{{id}}" name="block_todo_edit_id" class="block_todo_edit_id" data-id="{{id}}">
        <label class="sr-only" for="edit_duedate">{{#str}} pin, block_todo {{/str}}</label>
        <input id="edit_duedate" class="form-control block_todo_edit_duedate" name="block_todo_edit_duedate" type="date" value="{{duedate}}" data-id="{{id}}">
    </div>
</form>
