{{!
    @template block_learning_log/content

    Renders a list of learning events.

}}
<table class="table list-wrapper">
  <thead class="thead-light">
    <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Organisation</th>
        <th>Duration (hours)</th>
        <th>Verifiable?</th>
        <th>Edit/delete</th>
    </tr>
  </thead>
{{#items}}
    {{#nesteditems}}
        {{>block_learning_log/item}}
    {{/nesteditems}}
{{/items}}
</table>
